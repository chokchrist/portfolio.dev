---
const personalImageAlt = "Christopher Jiménez"

import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/icons/LinkedIn.astro"
import MailIcon from "@/icons/Mail.astro"
import CVIcon from "@/icons/Cv.astro"
import SocialPill from "@/components/SocialPill.astro"

import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const locale = Astro.url.pathname.includes('/en') ? 'en' : 'es';

// Definimos las rutas de los CVs para ambos idiomas
const cvFile = locale === 'en' 
  ? '/Christopher Jiménez - CV EN.pdf' 
  : '/Christopher Jiménez - CV ES.pdf';

---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16 object-cover"
      src="/profile-photo.jpg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/chokchrist"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{i18n.HERO.BADGE_SLOT}</Badge>
    </a>
  </div>

  <h1 class="mt-6 text-5xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  > {i18n.HERO.TITLE}</h1>
  <p class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300">
    <span
      class="bg-gradient-to-r from-amber-500 to-pink-500 dark:bg-gradient-to-l dark:from-violet-500 dark:via-blue-200 dark:to-indigo-300 bg-clip-text text-transparent font-bold"
    >{i18n.HERO.TITLE_DESCRIPTION_1}</span> {i18n.HERO.TITLE_DESCRIPTION_2}
  </p>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:christ.jmanzano@gmail.com">
      <MailIcon class="size-4" />
      {i18n.HERO.NAV.CONTACT}
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/chokchrist">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href={cvFile} download="Christopher Jiménez - CV">
      <CVIcon class="size-4" />
      CV
    </SocialPill>
  </nav>
</div>