---
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row">
  <div class="[&>p]:mb-4 text-pretty order-2 md:order-1">
    <p>
      {i18n.ABOUT.DESCRIPTION_1}    
    </p>
    <p>
      {i18n.ABOUT.DESCRIPTION_2}    
    </p>
    <p>
      {i18n.ABOUT.DESCRIPTION_3}    
    </p>
  </div>
</section>