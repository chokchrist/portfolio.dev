---
interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 grid-rows-1 gap-8">
  <div>
    <div
      class="absolute w-3 h-3 bg-sky-300 rounded-full mt-1.5 -start-1.5 border border-white"
    >
    </div>
    <div class="md:ml-4">
      <h3 class="text-xl font-semibold text-sky-300 mt-2">
        {title}
      </h3>
  
      <time
        class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
        >{date}
      </time>
    </div>
    
  </div>

  <div>
    <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
      {description}
    </p>
  </div>
</div>
